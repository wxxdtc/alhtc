<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alhtc.cmss.news.mapper.VillageInfoMapper">
    
    <resultMap type="VillageInformation" id="VillageInformationResult">
        <result property="informationId"       column="information_id"       />
        <result property="informationTitle"    column="information_title"    />
        <result property="informationType"     column="notice_type"     />
        <result property="informationContent"  column="information_content"/>
        <result property="visitorVolume"  column="visitor_volume"/>
        <result property="status"         column="status"          />
        <result property="createBy"       column="create_by"       />
        <result property="createTime"     column="create_time"     />
        <result property="updateBy"       column="update_by"       />
        <result property="updateTime"     column="update_time"     />
        <result property="remark"         column="remark"          />
    </resultMap>
    
    <sql id="selectInformationVo">
        select information_id, information_title, information_type, cast(information_content as char) as information_content, visitor_volume, status, create_by, create_time, update_by, update_time, remark
		from village_information
    </sql>
    
    <select id="selectInformationById" parameterType="Long" resultMap="VillageInformationResult">
        <include refid="selectInformationVo"/>
        where information_id = #{informationId}
    </select>
    
    <select id="selectInformationList" parameterType="VillageInformation" resultMap="VillageInformationResult">
        <include refid="selectInformationVo"/>
        <where>
			<if test="informationTitle != null and informationTitle != ''">
				AND information_title like concat('%', #{informationTitle}, '%')
			</if>
			<if test="informationType != null and informationType != ''">
				AND information_type = #{informationType}
			</if>
			<if test="createBy != null and createBy != ''">
				AND create_by like concat('%', #{createBy}, '%')
			</if>
		</where>
    </select>
    
    <insert id="insertInformation" parameterType="VillageInformation">
        insert into village_information (
			<if test="informationTitle != null and informationTitle != '' ">information_title, </if>
			<if test="informationType != null and informationType != '' ">information_type, </if>
			<if test="informationContent != null and informationContent != '' ">information_content, </if>
            <if test="visitorVolume != null and visitorVolume != '' ">status, </if>
            <if test="status != null and status != '' ">status, </if>
			<if test="remark != null and remark != ''">remark,</if>
 			<if test="createBy != null and createBy != ''">create_by,</if>
 			create_time
 		)values(
			<if test="informationTitle != null and informationTitle != ''">#{informationTitle}, </if>
			<if test="informationType != null and informationType != ''">#{informationType}, </if>
			<if test="informationContent != null and informationContent != ''">#{informationContent}, </if>
            <if test="visitorVolume != null and visitorVolume != ''">#{visitorVolume}, </if>
            <if test="status != null and status != ''">#{status}, </if>
			<if test="remark != null and remark != ''">#{remark},</if>
 			<if test="createBy != null and createBy != ''">#{createBy},</if>
 			villageDate()
		)
    </insert>
	 
    <update id="updateInformation" parameterType="VillageInformation">
        update village_information
        <set>
            <if test="informationTitle != null and informationTitle != ''">information_title = #{informationTitle}, </if>
            <if test="informationType != null and informationType != ''">information_type = #{informationType}, </if>
            <if test="informationContent != null">information_content = #{informationContent}, </if>
            <if test="visitorVolume != null and visitorVolume != ''">visitorVolume = #{visitorVolume}, </if>
            <if test="status != null and status != ''">status = #{status}, </if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
 			update_time = villageDate()
        </set>
        where information_id = #{informationId}
    </update>
	
    <delete id="deleteInformationById" parameterType="Long">
        delete from village_information where information_id = #{informationId}
    </delete>
    
    <delete id="deleteInformationByIds" parameterType="Long">
        delete from village_information where information_id in
        <foreach item="informationId" collection="array" open="(" separator="," close=")">
            #{informationId}
        </foreach>
    </delete>
    
</mapper>